<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".HomeFragment"
    android:orientation="vertical">
    <TextView
        android:id="@+id/app_name"
        android:layout_width="190dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:text="이번 주 기록"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/count_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/step_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="걸음 수"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/count_view"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/step_count_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/count_text2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cup_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다회용 컵"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/food_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="채식 식단"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/count_view2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cup_count_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/food_count_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            android:textSize="24sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/character"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/character" />

    <TextView
        android:id="@+id/info"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="현재 기록"
        android:textAlignment="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="#000000"
        android:textSize="15dp" />
    <!-- TODO: Update blank fragment layout -->




</LinearLayout>